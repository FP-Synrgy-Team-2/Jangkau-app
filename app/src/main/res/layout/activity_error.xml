<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="16dp"
        android:paddingTop="100dp"
        tools:context=".feature.error.ErrorActivity">

    <ImageView
        android:id="@+id/ivRafikiError"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/rafiki_error"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/tvErrorMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Error message"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/ivRafikiError"
        app:layout_constraintStart_toStartOf="@+id/ivRafikiError"
        app:layout_constraintTop_toBottomOf="@id/ivRafikiError" />

    <Button
        android:id="@+id/btnRefresh"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Refresh"
        app:layout_constraintEnd_toEndOf="@+id/ivRafikiError"
        app:layout_constraintStart_toStartOf="@+id/ivRafikiError"
        app:layout_constraintTop_toBottomOf="@+id/tvErrorMessage" />
    </androidx.constraintlayout.widget.ConstraintLayout>
