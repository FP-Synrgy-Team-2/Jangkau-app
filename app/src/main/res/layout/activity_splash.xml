<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashActivity">

    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="87dp"
        android:layout_height="41dp"
        android:src="@drawable/logo"
        android:contentDescription="Jangkau By BCA"
        android:layout_marginVertical="20dp"
        app:layout_constraintBottom_toTopOf="@id/imgRafiki"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imgRafiki"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/rafiki"
        android:contentDescription="Ilustrasi Login"
        android:layout_marginVertical="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnQris"
        style="@style/Widget.Material3.Button.OutlinedButton"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        app:strokeColor="@color/blue_primary"
        android:text="QRIS"
        app:shapeAppearance="?attr/shapeAppearanceCornerLarge"
        app:circularflow_radiusInDP="40dp"
        android:layout_marginVertical="10dp"
        app:layout_constraintBottom_toTopOf="@id/btnLogin"
        app:layout_constraintTop_toBottomOf="@+id/imgRafiki" />

    <Button
        android:id="@+id/btnLogin"
        style="@style/Widget.Material3.Button"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        app:shapeAppearance="?attr/shapeAppearanceCornerLarge"
        android:text="Login"
        android:layout_marginVertical="10dp"
        app:layout_constraintTop_toBottomOf="@id/btnQris" />

  </androidx.constraintlayout.widget.ConstraintLayout>