<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:shapeAppearance="?attr/shapeAppearanceCornerMedium"
    app:cardBackgroundColor="@color/light_blue_primary"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <androidx.constraintlayout.widget.ConstraintLayout
        android:paddingVertical="24dp"
        android:paddingHorizontal="16dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        
        <TextView
            android:id="@+id/tvJenisRekening"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bca_tabunganku"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/dark_blue_primary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/blue_checklist"
            android:layout_marginStart="10dp"
            app:layout_constraintBottom_toBottomOf="@+id/tvJenisRekening"
            app:layout_constraintStart_toEndOf="@id/tvJenisRekening"
            app:layout_constraintTop_toTopOf="@+id/tvJenisRekening" />

        <TextView
            android:id="@+id/tvNomorRekening"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:text="@string/nomor_rek"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvJenisRekening"/>

        
    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>