<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardRekeningTujuan"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:shapeAppearance="?attr/shapeAppearanceCornerMedium"
    app:cardBackgroundColor="@android:color/transparent"
    app:strokeWidth="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:padding="5dp"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tvRekeningTujuan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tv_rekening_tujuan"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tvNamaPemilik"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="16dp"
            android:text="ADILLA SYAFIRA PUTRI"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvRekeningTujuan"/>

        <ImageView
            android:id="@+id/imgDot"
            android:layout_width="6dp"
            android:layout_height="6dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/baseline_circle_gray_24"
            app:layout_constraintBottom_toBottomOf="@+id/tvNamaPemilik"
            app:layout_constraintStart_toEndOf="@id/tvNamaPemilik"
            app:layout_constraintTop_toTopOf="@id/tvNamaPemilik" />

        <TextView
            android:id="@+id/tvNomorRekening"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="@string/nomor_rek"
            app:layout_constraintTop_toTopOf="@id/tvNamaPemilik"
            app:layout_constraintStart_toEndOf="@id/imgDot"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
