<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="24dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/icon_transaction"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_transfer"
        app:layout_constraintBottom_toBottomOf="@+id/description_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/description_text" />

    <TextView
        android:id="@+id/description_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/transfer"
        android:textStyle="bold"
        android:layout_marginStart="6dp"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@id/icon_transaction"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/amount_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="- Rp 2.500.000"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="#CB3A31"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/transfer_type_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Transfer Antar BCA"
        android:layout_marginTop="6dp"
        android:textColor="@color/dark_blue_primary"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/description_text" />

    <TextView
        android:id="@+id/transfer_info_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Ke ADILLA SYAFIRA PUTRI - 9823456612"
        android:layout_marginTop="4dp"
        android:textColor="@color/dark_blue_primary"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/transfer_type_text" />

    <TextView
        android:id="@+id/time_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="09.00 WIB"
        android:layout_marginTop="8dp"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/transfer_info_text" />

</androidx.constraintlayout.widget.ConstraintLayout>